h2(class='username') #{member_name}
- if (user.username != member_name) {
    - if ( !is_following ) {
        a(class="button", href="/follow?u="+member_name+"&f=1") Follow this user
    - } else {
        a(class="button", href="/follow?u="+member_name+"&f=0") Stop follow
    - }
- }

- if (posts.length)
    - posts.forEach(function(post) {
      div(class='post')
        a(class='username', href='/profile?u='+post.username) #{post.username}
        | #{post.post}
        i posted #{post.elapsed} ago via web
    - })
